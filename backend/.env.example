# Application
APP_NAME=Kubernetes Tenant Management Portal
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API
API_PREFIX=/api/v1
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/tenant_management
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Keycloak
KEYCLOAK_URL=https://keycloak.example.com
KEYCLOAK_REALM=saas-management
KEYCLOAK_CLIENT_ID=tenant-management-portal
KEYCLOAK_CLIENT_SECRET=your-client-secret
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# JWT
JWT_ALGORITHM=RS256
JWT_AUDIENCE=tenant-management-portal

# Kubernetes
# Leave empty to use in-cluster config when running in K8s
KUBECONFIG_PATH=
# Set to true when running inside Kubernetes cluster
IN_CLUSTER=false

# Scheduler
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=UTC

# Default Schedules (cron format)
# Stop tenants: Monday-Friday at 6 PM
DEFAULT_STOP_SCHEDULE=0 18 * * 1-5
# Start tenants: Monday-Friday at 8 AM
DEFAULT_START_SCHEDULE=0 8 * * 1-5

# AWS (if using IRSA, these can be omitted)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Audit Logging
AUDIT_LOG_RETENTION_DAYS=90

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
